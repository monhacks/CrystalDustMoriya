script Route27_Eventscript_CooltrainerReena {
  // TODO: Phone
  trainerbattle_single(TRAINER_REENA_1, "You shouldn't underestimate the wild\n{POKEMON} in these parts.", "Oh!\nYou're much too strong!")
		  
	specialvar(VAR_RESULT, ShouldTryRematchBattle)
	if(var(VAR_RESULT) == 1)
	{
	   trainerbattle_rematch(TRAINER_REENA_1, "What took you?\nStart right away!", "Oh!\nYou're much too strong!")
	   clearflag(FLAG_REENA_OFFERED_REMATCH)
	}	
	
  if (!flag(FLAG_PHONE_CARD_COOLTRAINER_REENA)) {
    if (!flag(FLAG_COOLTRAINER_REENA_OFFERED_NUMBER)) {
      msgbox("Not bad... It's something to beat\n"
        "me, even by an unlikely fluke...\p"
        "I like you! Give me your number!\n"
        "You can be my practice partner!", MSGBOX_YESNO)
      setflag(FLAG_COOLTRAINER_REENA_OFFERED_NUMBER)
    } else {
      msgbox("Give me your phone number! You are\ngoing to be my practice partner!", MSGBOX_YESNO)
    }
    if (var (VAR_RESULT) == 1) {
      registerphonecontact(FLAG_PHONE_CARD_COOLTRAINER_REENA)
      msgbox("Don't be too proud about beating\nme! It was a fluke!", MSGBOX_AUTOCLOSE)
    } else {
      msgbox("I don't believe it! You're going to\nregret this!", MSGBOX_AUTOCLOSE)
    }
    end
  }
  msgbox("You're just a kid, but you're not\nto be underestimated either.", MSGBOX_AUTOCLOSE)
  end
}